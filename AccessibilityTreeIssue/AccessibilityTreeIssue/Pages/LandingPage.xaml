<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AccessibilityTreeIssue.Pages.LandingPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Label FontSize="Title" Text="Heading" />

            <Label FontSize="Medium" Text="Content on the page that we can read" />

            <Button Clicked="Button_Clicked" Text="Get Details" />

            <Label FontSize="Large" Text="Footer" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>